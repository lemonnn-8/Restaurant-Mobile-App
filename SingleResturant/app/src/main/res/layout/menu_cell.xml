<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_alpha"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#f7f7f7" >

        <RelativeLayout
            android:id="@+id/rel_text1"
            android:layout_width="fill_parent"
            android:layout_height="55dp" >

            <TextView
                android:id="@+id/txt_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#474747"
                android:textSize="18dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_border"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/txt_alpha"
                android:background="@drawable/green_border" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="fill_parent"
        android:layout_height="92dp"
        android:layout_below="@+id/rel_alpha"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/cellmenu" >

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/rel_img" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:lines="2"
                    android:text=""
                    android:textColor="#474747"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#474747"
                    android:textSize="20dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" >

           

            <khanaKhazana.ashadeep.utils.RoundedImageView
                android:id="@+id/img_item"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />
              <ProgressBar
                android:id="@+id/progress"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" /> 
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>